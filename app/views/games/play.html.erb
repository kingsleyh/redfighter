<script>
    $(function () {
        var faye = new Faye.Client('http://localhost:9292/faye');

        faye.subscribe('/player/<%= @player.id %>', function (data) {
            if (data.attr == 'level') {
                $('#player_level').text(data.data);
            }
            if (data.attr == 'health') {
                $('#player_health').text(data.data);
            }
            if (data.attr == 'player_info') {
                $('#player_info').html(data.data);
            }
            if (data.attr == 'current_room') {
                $('#current_room').html(data.data);
            }
        });

    });

</script>

<div id="current_room">
  <%= render :partial => 'games/current_room', :locals => {:player => @player} %>
</div>

<h2>Play</h2>

<table border="1" width="100%">
  <tr>
    <td valign="top">
      <ul>Areas
        <% @areas.each do |area| %>
            <li><%= area.name %> : Level <%= area.level %></li>
        <% end %>
      </ul>
    </td>
    <td valign="top">
      <div id="room_info">
        <%= render :partial => 'games/room_info', :locals => {:player => @player} %>
      </div>
    </td>
    <td valign="top">

      <h3><%= @player.name %></h3>

      <p>Health: <span id="player_health"><%= @player.health %></span></p>

      <p>Level: <span id="player_level"><%= @player.level %></span></p>

      <div id="player_info">
        <%= render :partial => 'games/player_info', :locals => {:player => @player} %>
      </div>

      <ul>Strategies
        <% @player.spells.each do |spell| %>
            <li><%= spell.name %></li>
        <% end %>
      </ul>

    </td>
  </tr>
</table>